{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["warn", {
      "tabWidth": 2,
      "singleQuote": true,
      "printWidth": 80,
      "endOfLine": "auto"
    }]
  }
}
