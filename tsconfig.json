{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom", "es6", "es2017"]
  },
  "include": ["./global.d.ts","src/**/*", "./jest-setup.ts"],
  "exclude": ["node_modules"]
}
